<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    >
	<RelativeLayout 
	     android:layout_width="wrap_content"
   		 android:layout_height="wrap_content"
    	 android:background="@drawable/play_background_left"
	    >
    <ListView
        android:id="@+id/lv_play_group"
        android:nextFocusRight="@+id/lv_play_child"
        android:focusableInTouchMode="true"
        style="@style/ListView"
        android:layout_marginTop="115dip"
        />
    
    <ListView
        android:id="@+id/lv_play_child"
        android:layout_toRightOf="@+id/lv_play_group"
        android:layout_marginTop="75dip"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="20dip"
        android:layout_width="300dip"
        android:layout_height="580dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dip"
        android:scrollbars="none"
        android:background="@android:color/transparent"
        android:listSelector="@android:color/transparent" />
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/ll_playing"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:layout_width="200dip"
	    android:layout_height="100dip"
	    android:orientation="vertical"
	    android:gravity="center"
	    >
	<TextView 
	    android:id="@+id/tv_playing_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:textColor="@android:color/background_light"
	    android:text="@string/playing_channel"
	    />
	<TextView 
	    android:id="@+id/tv_playing_group"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:textColor="@android:color/background_light"
	    />
	<TextView 
	    android:id="@+id/tv_playing_child"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="@android:color/background_light"
	    />
	</LinearLayout>
	<ToggleButton 
	    android:id="@+id/tbtn_full_screen"
	    android:layout_alignParentRight="true"
	    android:layout_above="@+id/ll_playing"
	    android:layout_width="150dip"
	    android:layout_height="55dip"
	    android:layout_marginRight="30dip"
	    android:textOn="@string/zoom_full_screen"
	    android:textOff="@string/zoom_normal"
	    />
