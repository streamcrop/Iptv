<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/play_background_left"
    android:visibility="gone"
    >

    <ListView
        android:id="@+id/lv_play_group"
        android:nextFocusRight="@+id/lv_play_child"
        android:focusableInTouchMode="true"
        style="@style/ListView"
        android:layout_marginTop="115dip"
        />
    
    <ListView
        android:id="@+id/lv_play_child"
        android:layout_toRightOf="@+id/lv_play_group"
        android:layout_marginTop="75dip"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="20dip"
        android:layout_width="300dip"
        android:layout_height="580dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dip"
        android:scrollbars="none"
        android:background="@android:color/transparent"
        android:listSelector="@android:color/transparent" />

