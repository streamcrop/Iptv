<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dip" 
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:id="@+id/media_control"
    android:background="@drawable/mediacontrol_background"
    >
    <!-- pre  -->
    <ImageButton 
        style="@style/MediaController"
        android:id="@+id/media_control_prev"
        android:src="@drawable/media_control_prev_selector"
        />
    
    <!-- play -->
    <ImageButton 
        style="@style/MediaController"
        android:id="@+id/media_control_play"
        android:src="@drawable/media_control_play_selector"
        />
    
    <!-- next -->
    <ImageButton 
       style="@style/MediaController"
        android:id="@+id/media_control_next"
        android:src="@drawable/media_control_next_selector"
        />
    
    <!-- zoom -->
    <ImageButton 
        style="@style/MediaController"
        android:id="@+id/media_control_zoom"
        android:src="@drawable/media_control_zoom_selector"
        />
    
</LinearLayout>
